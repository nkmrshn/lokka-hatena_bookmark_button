%h2= t.hatena_bookmark_button
%form{:action => '/admin/plugins/hatena_bookmark_button', :method => 'post'}
  %input{:type => 'hidden', :name => '_method', :value => 'put'}
  .field
    %label{:for => 'hatena_bookmark_button_layout'}= t.hatena_bookmark_button_layout
    %br
    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_standard_balloon', :name => 'hatena_bookmark_button_layout', :value => 'standard-balloon', :checked => Option.hatena_bookmark_button_layout == 'standard-balloon'}
      %label{:for => 'hatena_bookmark_button_layout_standard_balloon'}= t.hatena_bookmark_button_layout_standard_balloon

    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_vertical_balloon', :name => 'hatena_bookmark_button_layout', :value => 'vertical-balloon', :checked => Option.hatena_bookmark_button_layout == 'vertical-balloon'}
      %label{:for => 'hatena_bookmark_button_layout_vertical_balloon'}= t.hatena_bookmark_button_layout_vertical_balloon

    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_simple_balloon', :name => 'hatena_bookmark_button_layout', :value => 'simple-balloon', :checked => Option.hatena_bookmark_button_layout == 'simple-balloon'}
      %label{:for => 'hatena_bookmark_button_layout_simple_balloon'}= t.hatena_bookmark_button_layout_simple_balloon

    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_standard', :name => 'hatena_bookmark_button_layout', :value => 'standard', :checked => Option.hatena_bookmark_button_layout == 'standard'}
      %label{:for => 'hatena_bookmark_button_layout_standard'}= t.hatena_bookmark_button_layout_standard

    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_vertical', :name => 'hatena_bookmark_button_layout', :value => 'vertical', :checked => Option.hatena_bookmark_button_layout == 'vertical'}
      %label{:for => 'hatena_bookmark_button_layout_vertical'}= t.hatena_bookmark_button_layout_vertical

    %div
      %input{:type => 'radio', :id => 'hatena_bookmark_button_layout_simple', :name => 'hatena_bookmark_button_layout', :value => 'simple', :checked => Option.hatena_bookmark_button_layout == 'simple'}
      %label{:for => 'hatena_bookmark_button_layout_simple'}= t.hatena_bookmark_button_layout_simple
  .field
    %input{:type => 'submit', :value => t.edit}
